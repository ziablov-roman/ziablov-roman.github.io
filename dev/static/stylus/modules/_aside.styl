.filter-wrap
  width 270px

.filter-item
  position relative
  background white
  padding 40px 30px
  margin-bottom 30px
  &:last-child
    margin-bottom 0

.filter-title
  display block
  color orangeColor
  font-size 1.286rem
  font-family boltFont
  margin-bottom 40px

.filter-close
  display none
  position absolute
  right 15px
  top 18px
  cursor pointer
  sprite($s-close)

.filter-line
  margin-bottom 40px
  font-size 1.143rem
  font-family semiBoltFont
  &:last-child
    margin-bottom 0

  label
    cursor pointer

  input[type="radio"]
    display none
    &:checked
      & + label
        color orangeColor

  input[type="range"]
    width 100%

  input[type="checkbox"]
    display none
    &:checked
      & + span
        background white
        border 4px solid orangeColor
      & ~ label
        color orangeColor

.checkbox
  display inline-block
  position relative
  padding-left 10px

.castom-checkbox
  display inline-block
  width 14px
  height 14px
  background mainBgColor


.filter-line--price
  overflow hidden
  span
    position relative
    top 3px
  input[type="text"]
    float right
    padding 3px
    width 45px
    border none
    background mainBgColor
.filter-price__from
  display inline-block
  width 47%
  float left

.filter-price__to
  display inline-block
  width 47%
  float right
  padding-left 10px