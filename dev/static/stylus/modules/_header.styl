header
  background-color white
.header__top
  padding 25px 0
  border-bottom 1px solid lightGrayColor
  .container
    overflow hidden

.header__contacts
  float left

.header__social
  float right
  li
    display inline-block
    margin-left 15px
    &:first-child
      margin-left 0

.social__link--tw
  sprite($s-tw)
.social__link--fb
  sprite($s-fb)
.social__link--google
  sprite($s-google)
.social__link--instagram
  sprite($s-instagram)

.header__mail
  margin-right 20px
  &:before
    content''
    display inline-block
    sprite($s-mail)
    margin-right 10px

.header__phone
  &:before
    content''
    display inline-block
    sprite($s-phone)
    margin-right 10px

.header__bottom
  padding 40px 0
  border-bottom 1px solid lightGrayColor


.header__logo,
.header-nav
  display inline-block

.header__logo
  margin-right 80px
  vertical-align top
  cursor pointer


.header-nav
  vertical-align bottom
  margin-bottom 12px

.header-nav__list
  li
    display inline-block
    margin-right 40px
    &:last-child
      margin-right 0
    a
      display block
      width 100%
      height 100%
      font-size 1.43rem
      &.active,
      &:hover
        color orangeColor
        cursor pointer
.header-action
  display inline-block
  float right
  width 100%
  max-width 170px
  text-align right
  margin-top 5px

.header-search__form
  display none
.header-search,
.header-filter
.header-profil,
.header-basket
  display inline-block
  vertical-align bottom
  margin-right 25px

.header-basket
  margin-right 0
  position relative
.header-basket__number
    display block
    position absolute
    z-index 10
    top -15px
    left 3px
    width 19px
    height 19px
    border-radius 50%
    background-color mainFontColor
    color white
    font-size .714rem
    text-align center
    padding-top 4px

.header-search__icon
  display block
  cursor pointer
  sprite($s-search)

.header-filter__icon
  display block
  cursor pointer
  sprite($s-filter-grey)

.header-profil__icon
  display block
  cursor pointer
  sprite($s-profil)
.header-basket__icon
  display block
  cursor pointer
  sprite($s-cart)


